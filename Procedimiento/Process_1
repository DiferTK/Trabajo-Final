/*Este procedimiento almacenado está diseñado para seleccionar, los datos se seleccionan
de tal manera que muestran el ID del cliente, su nombre, el ID de la película y el título de la película. */

USE sakila;
DELIMITER $$
DROP PROCEDURE IF EXISTS MostrarDatosSakila$$
CREATE PROCEDURE MostrarDatosSakila()
BEGIN
    SELECT customer_id, first_name, film_id, title
    FROM customer 
    JOIN inventory ON customer.customer_id = inventory.customer_id
    JOIN film ON inventory.film_id = film.film_id;

    SELECT 'El procedimiento MostrarDatosSakila se ha ejecutado correctamente' AS Mensaje;
END$$
DELIMITER ;
